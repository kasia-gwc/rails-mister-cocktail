<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, label: false, placeholder: "Add cocktail name"  %>
        <%= f.input :content, label: false, placeholder: "Add cocktail description" %>
        <%= f.input :photo, label: false, as: :file %>
        <%= f.button :submit, class: "btn btn-lg btn-info btn-black"%>
      <% end %>
      <style>
      .form-control {
        font-family: 'Shadows Into Light' !important;
        font-size: 20px;
      }
      </style>
    </div>
  </div>
</div>
