<div class="navbar-lewagon navbar-fixed-top">
  <%= link_to root_path, class: "navbar-brand d-flex" do %>
    <i id="logo" class="fas fa-cocktail fa-2x"></i>
    <% end %>
    <a class="navbar-brand" href=""></a>
</div>
<div class="container">
    <div class="row">
      <div class="col-6">
        <h1 style="color: #fb9616;"><strong><%= @cocktail.name %></strong></h1>
       <% if @cocktail.photo.attached? %>
              <div class="card-cocktail-show" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%= cl_image_path @cocktail.photo.key %>)">
          <% else %>
              <div class="card-cocktail-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(/assets/sex_on.jpg)">
          <% end %>
            <div class="card-description">
              <h6><%= @cocktail.content %></h6>
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="show-container">
            <div class="ingredient-card">
              <h2>Ingredients</h2>
              <hr>
              <div class="row">
                <% @cocktail.doses.each do |dose| %>
                <div class="col-3 card ingredient">
                  <div class="card-body ingredient">
                    <h4 class="card-title ingredient"><%= dose.ingredient.name %></h4>
                    <p class="card-subtitle mb-2 text-muted ingredient"><%= dose.description %></p>
                    <!-- <p class="card-text ingredient">Description</p> -->
                    <%= link_to dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } do %><i class="far fa-trash-alt fa-1x"></i>
                    <% end %>
                  </div>
                </div>
                <% end %>
              </div>
              <hr>
              <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-warning" %>
              <%= link_to 'Back', url_for(:back), class: "btn btn-outline-warning" %>
            </div>

            </div>
            <br>
            <div class="show-container">
              <h2>Rating</h2>
                <hr>
              <div class="col-12">
                <%= simple_form_for [@cocktail, @star], class: "form-inline" do |f| %>
                   <div class="row", style="display: inline-block;">
                     <fieldset class="rating">
                       <input type="radio" id="star5" name="star[number]" value="5" /><label class = "full" for="star5" title="5 stars"></label>
                       <input type="radio" id="star4" name="star[number]" value="4" /><label class = "full" for="star4" title="4 stars"></label>
                       <input type="radio" id="star3" name="star[number]" value="3" /><label class = "full" for="star3" title="3 stars"></label>
                       <input type="radio" id="star2" name="star[number]" value="2" /><label class = "full" for="star2" title="2 stars"></label>
                       <input type="radio" id="star1" name="star[number]" value="1" /><label class = "full" for="star1" title="1 star"></label>
                     </fieldset>
                      <%= f.submit "Rate", class: "btn btn-warning"%>
              </div>
                <% end %>
                <hr>
            </div>
          </div>
        </div>
    </div>
</div>
